# ============================================
# APPLICATION CONFIGURATION
# ============================================
APP_NAME=ADH Academy
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/ADH

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=adh_academy
DB_USER=root
DB_PASSWORD=

# ============================================
# STRIPE PAYMENT GATEWAY
# ============================================
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================
# MONCASH PAYMENT GATEWAY (HAITI)
# ============================================
MONCASH_CLIENT_ID=your_client_id
MONCASH_CLIENT_SECRET=your_client_secret
MONCASH_BASE_URL=https://sandbox.moncashbutton.digicelgroup.com/Moncash-business

# ============================================
# PAYMENT CONFIGURATION
# ============================================
COMMISSION_RATE=0.20
EUR_TO_HTG=132.5
DEFAULT_CURRENCY=EUR

# ============================================
# MAIL CONFIGURATION
# ============================================
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_username
MAIL_PASSWORD=your_password
MAIL_FROM_ADDRESS=noreply@adh-academy.com
MAIL_FROM_NAME="ADH Academy"

# ============================================
# SESSION & SECURITY
# ============================================
SESSION_TIMEOUT=86400
SESSION_NAME=adh_session
SECURE_COOKIES=false
CSRF_PROTECTION=true

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_PATH=logs/
